{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "jinja",
  "rules": {
    "source": {
      "type": "REPEAT",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "jinja_expression"
          },
          {
            "type": "SYMBOL",
            "name": "jinja_statement"
          },
          {
            "type": "SYMBOL",
            "name": "jinja_comment"
          },
          {
            "type": "SYMBOL",
            "name": "text"
          }
        ]
      }
    },
    "jinja_expression": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{{"
        },
        {
          "type": "PATTERN",
          "value": ".*?"
        },
        {
          "type": "STRING",
          "value": "}}"
        }
      ]
    },
    "jinja_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{%"
        },
        {
          "type": "PATTERN",
          "value": ".*?"
        },
        {
          "type": "STRING",
          "value": "%}"
        }
      ]
    },
    "jinja_comment": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{#"
        },
        {
          "type": "PATTERN",
          "value": ".*?"
        },
        {
          "type": "STRING",
          "value": "#}"
        }
      ]
    },
    "text": {
      "type": "PATTERN",
      "value": "[^ \\{\\}%#]+"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}